<div class="container py-4">
  <div class="row mb-4">
    <div class="col-12 col-md-8 mx-auto">
      <div class="card shadow border-0">
        <div class="card-body">
          <h1 class="card-title fw-bold mb-2"><i class="bi bi-wallet2 me-2"></i>Budget: <%= @budget.name %></h1>
          <p class="card-text text-muted mb-1">ID: <%= @budget.id %></p>
          <div class="mb-2">
            <span class="badge bg-primary">Total Funds: <%= number_to_currency(@budget.total_funds) %></span>
            <span class="badge bg-success">Allocated: <%= number_to_currency(@budget.total_allocated) %></span>
            <span class="badge bg-info text-dark">Remaining: <%= number_to_currency(@budget.remaining_funds) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="fw-semibold"><i class="bi bi-collection me-2"></i>Projects</h2>
        <%= link_to 'Back to Budgets', budgets_path, class: 'btn btn-outline-secondary' %>
      </div>
      <%= render partial: "project_table", locals: { projects: @budget_projects, show_actions: true, budget: @budget } %>
    </div>
  </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> 